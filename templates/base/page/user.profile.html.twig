{% extends "base/base.html.twig" %}

{% block body %}
    {{ encore_entry_link_tags('navbar-base') }}
    <div class="container-fluid">
        <div class="row justify-content-center m-4">
            <div class="col-lg-12 mb-5 mt-5 text-center">
                <h1 class="font-weight-bold">Podgląd profilu gracza {{ app.user.username }}</h1>
                <h2 class="base">Sprawdź informacje o sobie...</h2>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-7 d-flex align-items-center">
                        <div class="gs-item w-100 h-75 mw-100">
                            <div class="gs-item-content d-flex justify-content-center flex-column h-100">
                                {% if is_granted('ROLE_ADMIN') %}
                                    {% set role = "ADMINISTRATOR" %}
                                {% else %}
                                    {% set role = "GRACZ" %}
                                {% endif %}
                                <div class="form-group w-100">
                                    <input type="text" class="form-control" value="Ranga: {{ role }}" disabled/>
                                </div>
                                <div class="form-group w-100">
                                    <input type="text" class="form-control" value="Email: {{ app.user.email }}" disabled/>
                                </div>
                                <div class="form-group w-100">
                                    <input type="text" class="form-control" value="Nick: {{ app.user.username }}"
                                           disabled/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="user w-100 justify-content-center d-flex">
                            <img alt="{{ app.user.username }}"
                                 src="https://minotar.net/body/{{ app.user.username }}/300.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
