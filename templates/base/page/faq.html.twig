{% extends 'colored/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-colored') }}
        <div class="container-fluid">
            <div class="row justify-content-center text-center flex-column m-4">
                <div class="col-lg-12 mb-5 mt-5">
                    <h1>Najczęstsze pytania i odpowiedzi</h1>
                    <h2 class="colored">Masz pytanie? Sprawdź odpowiedź!</h2>
                </div>

                <div id="accordion" class="mt-2">
                    {% for faq in faqList %}
                        <div class="card bg-dark">
                            <div class="card-header" id="faqHead{{ faq.id }}">
                                <label class="h5 mb-0 w-100">
                                    <a class="w-100 text-left d-block" data-toggle="collapse"
                                       data-target="#faq{{ faq.id }}"
                                       aria-expanded="true" aria-controls="faq{{ faq.id }}">
                                        {{ loop.index }}. {{ faq.question }}&nbsp;
                                        <span class="fa fa-chevron-down font-weight-bold rb-0 position-absolute"></span>
                                    </a>
                                </label>
                            </div>

                            <div id="faq{{ faq.id }}" class="collapse" aria-labelledby="faqHead{{ faq.id }}"
                                 data-parent="#accordion">
                                <div class="card-body bg-light">
                                    {{ faq.answer | raw }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock %}
