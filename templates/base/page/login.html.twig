{% extends 'base/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-base') }}
    <div class="container-fluid">
        <div class="row justify-content-center text-center m-4">
            <div class="col-lg-12 pb-5 pt-5">
                <h1>Logowanie i Rejestracja</h1>
                <h2 class="base">Zaloguj się i korzystaj w pełni z funkcjonalności naszej aplikacji</h2>
            </div>
            <div class="col-lg-6 col-md-12 login-container">
                {{ form_start(login_form, {action: 'login'}) }}
                {{ form_row(login_form._username) }}
                {{ form_row(login_form._password) }}

                <button class="gs-accept w-50" type="submit">Zaloguj się</button>
                <div class="pt-4"><a href="{{ path('forgot-password') }}">Zapomniałeś hasła?</a></div>
                {{ form_end(login_form) }}
            </div>
            <div class="col-lg-6 col-md-12 login-container">
                {{ form_start(register_form, {action: 'register'}) }}
                {{ form_row(register_form.username) }}
                {{ form_row(register_form.password.first) }}
                {{ form_row(register_form.password.second) }}
                {{ form_row(register_form.email) }}
                {{ form_row(register_form.referral) }}
                {{ form_row(register_form.rules) }}
                {{ form_row(register_form.commercial) }}
                {{ form_row(register_form.reCaptcha) }}

                <div id="recaptcha-component"></div>

                <button class="gs-accept w-50" type="submit">Zarejestruj się</button>
                {{ form_end(register_form) }}
            </div>
        </div>
    </div>
{% endblock %}