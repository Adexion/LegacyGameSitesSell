{% extends 'base/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-base') }}
    <div class="container-fluid">
        <div class="row justify-content-center text-center flex-column m-4">
            <div class="col-lg-12 mb-5 mt-5">
                <h1>Zapomniałeś hasła?</h1>
                <h2 class="base">Podaj swój nick, a my wyślemy do ciebie email z linkiem do zmiany hasła!</h2>
            </div>
            <div class="container">
                {% if send %}
                    <div class="alert alert-info">Jeżeli takie konto istnieje, to na email powinieneś otrzymać link do
                        resetowania
                        hasła. Sprawdź swoją skrzynkę pocztową.
                    </div>
                {% endif %}
                <div>
                    {{ form_start(form, {action: '/reset'}) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.reCaptcha) }}
                    {{ form_errors(form.reCaptcha) }}

                    <div id="recaptcha-component"></div>

                    <button class="gs-redirect mb-4 w-100" type="submit">Zresetuj haslo</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}