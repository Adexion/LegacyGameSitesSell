{% extends 'base/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-base') }}
    <div class="container-fluid">
        <div class="row justify-content-center text-center flex-column m-4">
            <div class="col-lg-12 mb-5 mt-5">
                <h1>Ustal nowe hasło dla swojego konta!</h1>
                <h2 class="base">Wpisz dwa razy to samo hasło</h2>
            </div>
            <div class="container">
                <div>
                    {{ form_start(form, {action: link }) }}
                    {{ form_row(form.password.first) }}
                    {{ form_row(form.password.second) }}

                    <div id="recaptcha-component"></div>

                    <button class="gs-redirect mb-4 w-100" type="submit">Zmień hasło</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}