{% extends 'base/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-base') }}
    <div class="container-fluid">
        <div class="row justify-content-center text-center flex-column m-lg-4 m-md-0 pb-4">
            <div class="col-lg-12 mb-5 mt-5">
                <h1>Poradniki wideo do rozgrywki na serwerze</h1>
                <h2 class="base">Nie wiesz jak coś zrobić? Obejrzyj poradniki...</h2>
            </div>

            <div id="accordion" class="mt-2">
                {% for tutorial in tutorialList %}
                    <div class="card bg-dark">
                        <div class="card-header" id="tutorialHead{{ tutorial.id }}">
                            <label class="h5 mb-0 w-100">
                                <a class="w-100 text-left d-block" data-toggle="collapse"
                                   data-target="#tutorial{{ tutorial.id }}"
                                   aria-expanded="true" aria-controls="tutorial{{ tutorial.id }}">
                                    {{ loop.index }}. {{ tutorial.question }}&nbsp;
                                    <span class="fa fa-chevron-down"></span>
                                </a>
                            </label>
                        </div>

                        <div id="tutorial{{ tutorial.id }}" class="collapse"
                             aria-labelledby="tutorialHead{{ tutorial.id }}"
                             data-parent="#accordion">
                            <div class="card-body bg-light tutorial">
                                {% if tutorial.embed is defined %}
                                    <iframe class="youtube-content" type="text/html" height="360"
                                            src="{{ tutorial.embed }}"></iframe>
                                {% endif %}
                                <br/>
                                {{ tutorial.text | raw }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}