<!DOCTYPE html>
<html lang="pl">
<head>
    {% include 'base/component/head.html.twig' %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('main-base') }}
    {% endblock %}
</head>
<body>

<div id="content">
    {% include 'base/component/nav.html.twig' %}
    {% block body %}{% endblock %}
</div>
<footer class="d-flex justify-content-end">
    <div class="col-lg-8 col-md-12 information">
        <img src="{{ asset('/assets/images/logotype.png') }}" alt="Logotype">
        <div class="col-lg-8 col-md-12 col-12">
            <span>{{ global.contentPL }}</span><br/><br/>
            <span>{{ global.contentEN }}</span>

            <div class="social-wrapper d-flex row">
                <div class="col-md-12 col-lg-7">{% include 'base/component/social.html.twig' %}</div>
                <p class="col-md-12 col-lg-5 underline">Powered by <a href="https://gamesites.pl/" target="_blank">gamesites.pl</a></p>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</footer>
</body>
</html>
