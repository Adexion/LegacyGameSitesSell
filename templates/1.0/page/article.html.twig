{% extends '1.0/base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h4 class="font-weight-bold">{{ article.title | raw }}</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ article.subhead | raw }}</h5>
            <p class="card-text">{{ article.shortText | raw }}</p>
            <span class="author">
                ~{{ article.author.username }}&nbsp;
                <img class="avatar" src="https://minotar.net/avatar/{{ article.author.username }}" alt="{{ article.author.username }} avatar"/>
            </span>
        </div>
    </div>
{% endblock %}
