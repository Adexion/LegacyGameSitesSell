{% extends 'colored/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-colored') }}
    <div class="container-fluid">
        <div class="row justify-content-center flex-column m-4">
            <div class="col-lg-12 mb-5 mt-5 text-center">
                <h1>Zasady rozgrywki nas naszych serwerach</h1>
                <h2 class="colored">Przestrzegaj zasad, dzięki temu rozgrywka będzie fair play!</h2>
            </div>
            <div class="card bg-light">
                <div class="card-body">
                    {% for key, rule in ruleList %}
                        <div class="pb-4">
                            <h5 id="{{ key }}" class="font-weight-bold mb-3 pl-3">{{ key }}</h5>
                            {% for r in rule %}
                                {{ r.description | raw }}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

