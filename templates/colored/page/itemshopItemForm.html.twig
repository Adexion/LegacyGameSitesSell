{% extends 'colored/base.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('navbar-colored') }}
    <div class="container-fluid">
        <div class="row justify-content-center text-center flex-column m-4">
            <div class="col-12 mb-5 mt-5">
                <h1>Właśnie kupujesz: {{ itemList.name }}</h1>
                <h2 class="colored">Wybierz formę płatności której chcesz użyć</h2>
            </div>
            <div class="col-12 row justify-content-center font-weight-normal">
                {% for key, form in formList %}
                    {% if form is not null %}
                        <div class="gs-item gs-item-sm">
                            {{ form_start(form) }}
                            <div class="gs-item-content text-center d-flex flex-column justify-content-center">
                                <img src="{{ asset('assets/images/payment/' ~ key ~ '.png') }}" alt="" class="mb-4"/>

                            </div>
                            <button type="submit" class="gs-submit mt-4 w-100">Przejdź do płatności</button>
                            {{ form_end(form) }}
                        </div>

                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
