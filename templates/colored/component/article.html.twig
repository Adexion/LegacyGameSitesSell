{% for article in articleList %}
    <div class="card bg-dark text-left mb-4">
        <div class="card-header d-flex align-items-center">
            <div class="d-flex flex-column">
                <span class="font-weight-bold">{{ article.title | raw }}</span>
                <div class="d-flex flex-row">
                    <span class="far fa-calendar">&nbsp;{{ article.createdAt|date('d.m.Y') }}&nbsp;</span>
                    <span class="far fa-comment">&nbsp;{{ article.author }}&nbsp;</span>
                </div>
            </div>
        </div>
        <div class="card-body bg-light">
            {% if article.image is defined %}
                <div class="d-flex justify-content-center">
                    <img src="{{ article.image }}"/>
                </div>
            {% endif %}
            <p class="card-text text-center">{{ article.shortText | raw }}</p>
        </div>
        <div class="bg-light p-3">
            <a href="{{ path('show-article', {slug: article.id }) }}" class="link">Czytaj wiÄ™cej ...</a>
        </div>
    </div>
{% endfor %}