{% extends 'front/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="slider-container bg-dark">
                <div id="carouselExampleControls" class="carousel slide h-100" data-ride="carousel">
                    <div class="carousel-inner h-100">
                        <div class="carousel-item active h-100">
                            <img class="d-block m-auto h-100" src="{{ asset('assets/images/launcher.png') }}" alt="First slide">
                        </div>
                        <div class="carousel-item h-100">
                            <img class="d-block m-auto h-100" src="{{ asset('assets/images/launcher2.png') }}" alt="Second slide">
                        </div>
                        <div class="carousel-item h-100 ">
                            <img class="d-block m-auto h-100" src="{{ asset('assets/images/launcher3.png') }}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div id="button-container" class="container">
                <div class="row">
                    <span class="col-4 p-3"><a class="btn btn-outline-purple btn-lg btn-block"><i class="fab fa-twitch"></i>&nbsp;Twitch Launcher</a></span>
                    <span class="col-4 p-3">
                        <a href="{{ link }}" class="btn btn-outline-secondary btn-lg btn-block"><i class="fas fa-download"></i>&nbsp;Nasz Launcher</a>
                        <a href="{{ path('modList') }}" class="d-block text-danger text-center mt-2">Lista modyfikacji</a>
                    </span>
                    <span class="col-4 p-3"><a class="btn btn-outline-primary btn-lg btn-block"><i class="fas fa-wrench"></i>&nbsp;Technic Launcher</a></span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
