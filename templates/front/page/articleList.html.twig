{% extends 'front/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row pt-5">
            {% for article in articleList %}
                <div style="background: {{ randomHexGenerator.randHexColor }};" class="p-4 text-shadow d-inline-block col-12 col-lg-6">
                    <p class="h4 font-weight-bold">{{ article.title | raw }}</p>
                    <p class="h5">{{ article.subhead | raw }}</p>
                    <hr/>
                    <span>{{ article.shortText | raw }}</span>
                    <div class="pt-2">
                        <span class="float-left text-small">
                            <a class="text-light" href="article/{{ article.id }}">Czytaj wiÄ™cej ...</a>
                        </span>
                        <span class="float-right text-small">
                            ~{{ article.author }}&nbsp
                            <img class="avatar" src="https://minotar.net/avatar/{{ article.author }}" alt="{{ article.author }} avatar"/>
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}