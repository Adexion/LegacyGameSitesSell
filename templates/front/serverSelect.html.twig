<!DOCTYPE html>
<html lang="pl">
<head>
    {% include 'front/component/head.html.twig' %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('main') }}
    {% endblock %}
</head>
<body class="bg-dark text-light">

<div class="pt-10">
    {% block body %}
        <div class="bg-black w-100 align-content-center h-50">
            <img src="{{ asset('assets/logotype.jpg') }}" alt="ModernGameLogo" class="w-50 d-block m-auto">
            <h1 class="text-center text-light text-shadow move-up">Wybierz serwer by rozpocząć</h1>
        </div>
        {% for s in server %}
            {% if s.src is defined %}
                <form method="post">
                    <input name="serverId" type="hidden" value="{{ s.id }}"/>
                    <input type="image" src="{{ s.src }}" alt="Serwer {{ s.name }}"
                           class="server-choosing text-light bg-darker "/>
                </form>
            {% endif %}
        {% endfor %}
    {% endblock %}
</div>

</body>
</html>
